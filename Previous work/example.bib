   issn = {16876180},
   issue = {1},
   journal = {Eurasip Journal on Advances in Signal Processing},
   keywords = {Anthropometric soft biometrics,Biometric tampering,Border control,Crowd surveillance,Multi-channel soft biometrics framework},
