@article{AlAnbouri2023,
   abstract = {Contemporary public infrastructure projects place an increased emphasis on sustainable options that integrate pedestrian routes, leisure facilities and convenient access to multimodal public transport. It is important to develop an understanding of the effectiveness of these contemporary designs. In the age of the General Data Protection Regulation (GDPR), there is a need to develop technology-based solutions that collect information about the behaviour of pedestrians as they commute and engage in leisure pursuits while preserving the privacy of citizens. Bluetooth Low Energy (BLE), has privacy preserving features that make it suitable for studies of this type. This work presents preliminary results of a detailed multi-stakeholder study that collected information via BLE from 27 volunteer pedestrians who regularly used the public domain of the newly developed Grangegorman campus in Dublin's north inner city. Before commencement of data collection, each volunteer completed a short questionnaire about their intended movements in the campus, and for the next three weeks they each carried a small keyring-sized BLE beacon with them as they passed through the campus. Bluetooth received signal strength was collected at 17 points around the campus over the study period. The data for the volunteers was anonymised at its point of capture using hash encoding of the MAC address of the carried beacons. The results of the work show that BLE can be used to monitor the approximate movements of volunteer pedestrians and so provide valuable information on the utilisation of public infrastructure.},
   author = {Ahlam AlAnbouri and Mayank Parmar and David Powell and Paula Kelly and Niall Holmes and Damon Berry and Lorraine D’Arcy},
   doi = {10.1109/ISC257844.2023.10293279},
   month = {10},
