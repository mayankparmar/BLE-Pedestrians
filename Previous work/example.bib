   issn = {2227-7390},
   issue = {16},
   journal = {Mathematics 2023, Vol. 11, Page 3477},
   keywords = {IoT privacy,internet of things,machine learning,malware detection,obfuscated malware,privacy,supervised learning algorithms},
   month = {8},
   pages = {3477},
   publisher = {Multidisciplinary Digital Publishing Institute},
   title = {Privacy Preservation Using Machine Learning in the Internet of Things},
