   publisher = {Springer Verlag},
   title = {Integration of vulnerable road users in cooperative ITS systems},
   volume = {9},
   url = {https://link.springer.com/articles/10.1007/s12544-017-0230-3 https://link.springer.com/article/10.1007/s12544-017-0230-3},
