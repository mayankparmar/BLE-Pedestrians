   keywords = {age,along interview,friendly neighborhood,high-density,high-rise,home behaviors,of,out,walk},
   month = {11},
   pages = {4251},
   pmid = {31683860},
   publisher = {Multidisciplinary Digital Publishing Institute},
   title = {Using Walk-Along Interviews to Identify Environmental Factors Influencing Older Adults’ Out-of-Home Behaviors in a High-Rise, High-Density Neighborhood},
   volume = {16},
   url = {https://www.mdpi.com/1660-4601/16/21/4251/htm https://www.mdpi.com/1660-4601/16/21/4251},
