   publisher = {Multidisciplinary Digital Publishing Institute},
   title = {Real-Time Indoor Positioning Based on BLE Beacons and Pedestrian Dead Reckoning for Smartphones},
   volume = {13},
   url = {https://www.mdpi.com/2076-3417/13/7/4415/htm https://www.mdpi.com/2076-3417/13/7/4415},
