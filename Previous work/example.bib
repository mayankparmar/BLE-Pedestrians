   keywords = {Conservation,Megafauna,Reintroduction,Restoration,Trophic cascades},
   month = {1},
   pages = {898-906},
   pmid = {26504218},
   publisher = {National Academy of Sciences},
   title = {Science for a wilder Anthropocene: Synthesis and future directions for trophic rewilding research},
   volume = {113},
   year = {2016},
