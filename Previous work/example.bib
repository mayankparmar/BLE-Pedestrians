   keywords = {adaptation,carnivora,urbanization},
   month = {5},
   pages = {1-23},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Big city life: carnivores in urban environments},
   volume = {287},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/j.1469-7998.2011.00887.x https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1469-7998.2011.00887.x https://zslpublications.onlinelibrary.wiley.com/doi/10.1111/j.1469-7998.2011.00887.x},
   year = {2012},
