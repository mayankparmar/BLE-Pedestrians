   pmid = {20383280},
   publisher = {Public Library of Science},
   title = {The Walking Behaviour of Pedestrian Social Groups and Its Impact on Crowd Dynamics},
   volume = {5},
   url = {https://journals.plos.org/plosone/article?id=10.1371/journal.pone.0010047},
   year = {2010},
}

