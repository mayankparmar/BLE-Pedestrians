   journal = {Conservation Biology},
   keywords = {ciencia ciudadana,citizen science,community-based monitoring,conocimiento ecológico tradicional,monitoreo basado en comunidades,monitoreo y manejo participativo,participación de público en la investigación científica,participatory monitoring and management,public participation in scientific research,traditional ecological knowledge},
   month = {12},
