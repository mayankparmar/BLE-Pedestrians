   keywords = {dominated landscape,human,hypogeal fungi,mycophagy,novel ecosystem,southern brown bandicoot (Isoodon obesulus)},
   month = {2},
   pages = {72-85},
   publisher = {John Wiley \& Sons, Ltd},
   title = {Dietary variation of an endangered mycophagous mammal in novel and remnant habitats in a peri-urban landscape},
   volume = {46},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/aec.12960 https://onlinelibrary.wiley.com/doi/abs/10.1111/aec.12960 https://onlinelibrary.wiley.com/doi/10.1111/aec.12960},
