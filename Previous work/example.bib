   publisher = {MDPI AG},
   title = {Impact of residential green space on sleep quality and sufficiency in children and adolescents residing in australia and germany},
   volume = {17},
   url = {/pmc/articles/PMC7369701/ /pmc/articles/PMC7369701/?report=abstract https://www.ncbi.nlm.nih.gov/pmc/articles/PMC7369701/},
