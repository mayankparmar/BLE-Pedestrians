   issue = {21},
   journal = {Applied Sciences (Switzerland)},
   keywords = {COVID-19,Crowd monitoring,Deep convolutional neural networks,Distance estimation,Human detection and tracking,Inverse perspective mapping,Pedestrian detection,Social distancing},
   pages = {1-29},
   publisher = {MDPI AG},
   title = {Deepsocial: Social distancing monitoring and infection risk assessment in covid-19 pandemic},
   volume = {10},
   year = {2020},
}
