   issn = {20763417},
   issue = {16},
   journal = {Applied Sciences 2020, Vol. 10, Page 5470},
   keywords = {ambient physiological monitoring,chronic diseases,chronic obstructive pulmonary disease (COPD),safety monitoring,smart wearables,unobtrusive health monitoring},
