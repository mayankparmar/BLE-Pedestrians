   month = {10},
   pages = {2429-2444},
   publisher = {Institute of Electrical and Electronics Engineers Inc.},
   title = {Passive Crowd Speed Estimation in Adjacent Regions with Minimal WiFi Sensing},
   volume = {19},
   year = {2020},
